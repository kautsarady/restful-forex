{
    "swagger": "2.0",
    "info": {
        "description": "This foreign currency exchange api documentation",
        "title": "Foreign Currency Exchange API",
        "contact": {
            "name": "kautsarady",
            "email": "kautsarady@gmail.com"
        },
        "license": {},
        "version": "1.0"
    },
    "host": "{{.Host}}",
    "basePath": "{{.BasePath}}",
    "paths": {
        "/api/add/{from}/{to}": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Add foreign currency exchange",
                "operationId": "add-forex",
                "parameters": [
                    {
                        "type": "string",
                        "description": "FROM currency ex: USD",
                        "name": "from",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "TO currency ex: JPY",
                        "name": "to",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "adding exchange data $from - $to success",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/httputil.HTTPError"
                        }
                    }
                }
            }
        },
        "/api/input/{from}/{to}": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Input foreign currency exchange",
                "operationId": "input-forex",
                "parameters": [
                    {
                        "type": "string",
                        "description": "FROM currency ex: USD",
                        "name": "from",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "TO currency ex: JPY",
                        "name": "to",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "number",
                        "description": "forex rate ex: 1.11",
                        "name": "rate",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "date",
                        "description": "forex date ex: 2018-11-13",
                        "name": "date",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "input exchange data $from - $to success",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/httputil.HTTPError"
                        }
                    }
                }
            }
        },
        "/api/remove/{from}/{to}": {
            "delete": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Remove foreign currency exchange",
                "operationId": "remove-forex",
                "parameters": [
                    {
                        "type": "string",
                        "description": "FROM currency ex: USD",
                        "name": "from",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "TO currency ex: JPY",
                        "name": "to",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "removing exchange data $from - $to success",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/httputil.HTTPError"
                        }
                    }
                }
            }
        },
        "/api/track": {
            "get": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Track foreign currency exchange",
                "operationId": "track-forex",
                "parameters": [
                    {
                        "type": "string",
                        "format": "date",
                        "description": "forex date ex: 2018-11-13",
                        "name": "date",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Exchange"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/httputil.HTTPError"
                        }
                    }
                }
            }
        },
        "/api/trend/{from}/{to}": {
            "get": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Show trend of foreign currency exchange",
                "operationId": "trend-forex",
                "parameters": [
                    {
                        "type": "string",
                        "description": "FROM currency ex: USD",
                        "name": "from",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "TO currency ex: JPY",
                        "name": "to",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "number",
                        "description": "average rate ex: 1.133",
                        "name": "avg",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "number",
                        "description": "variance rate ex: 0.333",
                        "name": "vrn",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Exchange"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/httputil.HTTPError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "httputil.HTTPError": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "example": 400
                },
                "message": {
                    "type": "string",
                    "example": "status bad request"
                }
            }
        },
        "model.Exchange": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "string",
                    "example": "2016-02-01"
                },
                "from": {
                    "type": "string",
                    "example": "USD"
                },
                "rate": {
                    "type": "number",
                    "example": 14967.667
                },
                "rate7": {
                    "type": "number",
                    "example": 0.233
                },
                "to": {
                    "type": "string",
                    "example": "IDR"
                }
            }
        }
    }
}